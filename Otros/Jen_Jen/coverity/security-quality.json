{
  "version": "1.0.0",
  "comment": "Security-Quality rules",
  "rules": [
    {
      "rule": "expression",
      "comment": "Security or Quality (High or Medium impact) defects are not allowed",
      "version": "1.0.0",
      "groupKey": "ikd,imp,chk",
      "maxPerEach": 0,
      "maxPerGroup": 0,
      "exp": {
        "name": "or",
        "exps": [
          { "name": "issueKind", "pattern": "Security|Various" },
          {
	        "name": "and",
	        "exps": [
	          { "name": "issueKind", "pattern": "Quality"     },
	          { "name": "impact",    "pattern": "High|Medium" }
	        ]
          }
        ]
      }
    },
    {
      "rule": "expression",
      "comment": "Allows some Quality Low defects",
      "version": "1.0.0",
      "groupKey": "ikd,imp,chk",
      "maxPerEach": -1,
      "maxPerGroup": 20,
      "exp": {
        "name": "and",
        "exps": [
           { "name": "issueKind", "pattern": "Quality" },
           { "name": "impact",    "pattern": "Low"     }
        ]
      }
    }
  ]
}
