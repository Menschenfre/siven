apiVersion: autoscaling/v1
kind: HorizontalPodAutoscaler
metadata:
  name: {{ NAME }}-hpa
  namespace: {{ NAMESPACE }}
spec:
  scaleTargetRef:
    apiVersion: apps/v1beta1
    kind: Deployment
    name: {{ NAME }}
  minReplicas: {{ REPLICA_MIN }}
  maxReplicas: {{ REPLICA_MAX }}
  targetCPUUtilizationPercentage: {{ CPU_TARGET }}
